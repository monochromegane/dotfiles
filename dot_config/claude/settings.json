{
  "permissions": {
    "defaultMode": "plan",
    "allow": [
      "Bash(git diff:*)",
      "Bash(go test:*)",
      "Bash(go vet:*)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(git push:*)",
      "Read(.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
    ]
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "theme": "dark",
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": 1,
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": 1
  },
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.config/claude/hooks/post-edit-lint.sh"
          }
        ]
      }
    ]
  }
}
