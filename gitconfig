[include]
    path = ~/.gitconfig.local
[diff]
    external = git_diff_wrapper
[core]
    editor = git_editor_wrapper
    excludesfile = ~/.gitignore
[pager]
    diff =
[color]
    ui = auto
[alias]
    a   = add
    us  = reset HEAD
    b   = branch
    c   = commit
    co  = checkout
    df  = diff
    dfc = diff --cached
    dfs = diff --staged
    f   = fetch --prune
    s   = status
    l   = !tig
    sta = stash
    me  = merge
    re  = rebase
    mt  = mergetool
    clb = !git branch --merged | grep -v \\* | xargs -I % git branch -d %
[mergetool]
    prompt     = false
    keepBackup = false
[merge]
    tool = vimdiff
[ghq]
    root = ~/src
    vcs = git
